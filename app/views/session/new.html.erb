<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
    <div>
      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control' %></div><br>

      <div><%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %></div><br>

      <div><%= f.submit "Log in", class: "btn btn-primary" %></div><br>
    <% end %>

  </div>
</div>